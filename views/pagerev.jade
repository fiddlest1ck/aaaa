extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title 
						div
							
							- if(typeof(locals.file.text) == 'undefined') {
							p= 'Filename:' + locals.file.filename
					a(type='button' href='/home/openbox/reply/') reply 
					a(href='/home/openbox/download/' + file.filename) download			
							- }
							- else {
							div(class='message-form')
								div(class='message-subject')
									p= 'Subject:' + locals.file.filename
								div(class='message-text')
									p= locals.file.text 
				a(type='button' href='/home/openbox/reply/') reply
				a(href='/home/openbox/download/' + file.filename) download			
							-}
							
					