extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Witaj #{user.firstName} #{user.lastName}		
						-if(file != null) {
							-if(file.viewed == '1') {
								p= 'Nowa wiadomosc w OPENBOX'
								-}
							-}
						-else {
							p= 'Brak nowych wiadomo≈õci'
							-}



